<%- include('layout/adminHeader')%>

<div class="container table">
    <div class="row my-4">
        <div class="col-lg-12">
            <% if(message){%>
            <div class="alert alert-dismissable fade show alert-<%=message.type%>" role="alert">
                <button class="btn-close" type="button" data-bs-dismiss="alert" aria-label="close"></button>
                <strong> <%= message.message %></strong>
            </div>
                <% } %>
                <div class="table-responsive">
                    <% if (users !='') { %>
                        <table class="table table-striped  my-3">
                            <thead>
                                <tr class="table-dark">
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% users.forEach((row ,index) => {%>
                                    <tr>
                                        <td><%= index+1 %></td>
                                        <td><%= row.name  %></td>
                                        <td><%= row.email  %></td>
                                        
                                        
                                        <td>
                                            <a href="/admin/edit/<%= row._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                                            <a href="/admin/delete/<%= row._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                            <a href="/admin/sum/<%= {num1:10,num2:20} %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                                        </td>
                                    </tr>
                               <% }); %>
                            </tbody>
                        </table>
                    <% }else{%>
                        <h1 class="text-center text-secondary mt-5">
                            No user found in database
                        </h1>
                         
                        <%} %>
                </div>
            
        </div>
    </div>
</div>
<%- include('layout/adminFooter')%>