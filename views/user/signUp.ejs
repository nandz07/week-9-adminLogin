<%-include('layout/header')-%> 
<div class="text-center center-div col-lg-12" id="login">
    <div class="container w-25 border ">
        <div class="title pb-3 mt-3">
            <h2 class="font-weight-bold">signup</h2>
            <span>signup for new user</span>
            <%if(locals.logout){%>
                    <div class="alter alert-success text-center">
                        <%= logout %>
                    </div>
                <%}%>
        </div>
        <div class="form-group mb-3 text-warning">
            <% if(locals.message){ %>
                <span>
                <%= locals.message %>
            </span>
           <% }%>
        </div>
        <form action="/signup" method="POST" class="pt-3">
            <div class="form-group mb-3">
                <input type="text" class="form-control" name="name" placeholder="name">
            </div>
            <div class="form-group mb-3">
                <input type="email" class="form-control" name="email" placeholder="email">
            </div>
            <div class="form-group mb-3">
                <input type="password" class="form-control" name="password" placeholder="password">
            </div>
            <div class="form-group mb-3">
                <span>Already have an account: </span><a href="/login" class="">Login</a>
            </div>
            <button type="submit" class="btn btn-success rounded-pill mb-3">Sign up</button>
        </form>
    </div>
</div>

<%-include('layout/footer')-%>